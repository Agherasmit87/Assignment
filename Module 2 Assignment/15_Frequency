import 'dart:io';

void main() {
  // Step 1: Take input from the user
  print("Enter a string:");
  String input = stdin.readLineSync().toString();

  // Step 2: Create an empty map to store character counts
  Map<String, int> charCount = {};

  // Step 3: Loop through each character in the string
  for (int i = 0; i < input.length; i++) {
    String char = input[i];

    // Step 4: Update frequency in the map
    if (charCount.containsKey(char)) {
      charCount[char] = charCount[char]! + 1;
    } else {
      charCount[char] = 1;
    }
  }

  // Step 5: Print the frequency map
  print("\nCharacter Frequencies:");
  charCount.forEach((char, count) {
    print("'$char' : $count");
  });
}
